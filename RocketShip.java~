public class RocketShip { 
public static final int SIZE=3; 

	public static void main(String[] args) { 
		top1(); 
		connector2(); 
		block3(); 
		block4(); 
		connector2(); 
		block4(); 
		block3(); 
		connector2(); 
		top1(); 
	} 

	public static void top1() { 
		for (int line=1; line <= SIZE+2; line++){ 
			for (int spaces=1; spaces <= 2*SIZE-line; spaces++){ 
			System.out.print(" "); 
			} 
			for (int fslash=1; fshlash <= line; fslash++){ 
			System.out.print("/"); 
			} 
			for (int astericks=1; astericks <= 2; astericks++){ 
			System.out.print("*"); 
			} 
			for (int bslash=1; bslash <= line; bslash++){ 
			System.out.print("\"); 
			} 
			System.out.println(); 
		} 
	} 

	public static void connector2()	{ 
		System.out.println("+=*=*=*=*=*=*+"); 
	} 

	public static void block3() { 
		for (int line=1; line <= SIZE; line++){ 
			for (int straight1=1; straight1 <=1; straight1++){ 
			System.out.print("|"); 
			} 
			for (int dot1=1; dot1 <= SIZE-line; dot1++){ 
			System.out.print("."); 
			} 
			for (int triangle1=1; triangle1 <= line; triangle1++){ 
			System.out.print("/\"); 
			} 
			for (int dot2=1; dot2 <= (-2)*line+6; dot2++){ 
			System.out.print("."); 
			} 
			for (int triangle2=1; triangle2 <= line; triangle2++){ 
			System.out.print("/\"); 
			} 
			for (int dot3=1; dot3 <= SIZE-line; dot3++){ 
			System.out.print("."); 
			} 
			for (int straight2=1; straight2 <=1; straight2++){ 
			System.out.print("|"); 
			} 
			System.out.println(); 
		} 
	} 

	public static void block4() { 
		for (int line=1; line <= SIZE; line++){ 
			for (int straight1=1; straight1 <=1; straight1++){ 
			System.out.print("|"); 
			} 
			for (int dot1=1; dot1 <= line-1; dot1++){ 
			System.out.print("."); 
			} 
			for (int yeild1=1; yeild1 <= (-1)*line+4; yeild1++){ 
			System.out.print("\/"); 
			} 
			for (int dot2=1; dot2 <= 2*line-2; dot2++){ 
			System.out.print("."); 
			} 
			for (int yeild2=1; yeild2 <= (-1)*line+4; yeild2++){ 
			System.out.print("\/"); 
			} 
			for (int dot3=1; dot3 <= (-1)*line+4; dot3++){ 
			System.out.print("."); 
			} 
			for (int straight2=1; straight2 <=1; straight2++){ 
			System.out.print("|"); 
			} 
			System.out.println(); 
		} 
	} 
}
